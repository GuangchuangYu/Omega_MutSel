source ~/.bash_profile

CPU=16
NUMAA=3
FINALFILE=mutsel-$JOB_NAME-$NUMAA.txt

# Set up directories
SIMDIR=/home/sjs3495/MutSel/Simulator/src
WDIR=/state/partition1/sjs3495/$JOB_NAME-$JOB_ID-$SGE_TASK_ID
RDIR=/home/sjs3495/Out_dnds_equalamino_tiny/$JOB_NAME-$JOB_ID-$NUMAA

mkdir -p $RDIR
mkdir -p $WDIR
if [ ! -d $WDIR ]
then
  echo $WDIR not created
  exit
fi

cd $WDIR

# Copy files
cp -r $SIMDIR .
cp /home/sjs3495/Omega_MutSel/cluster_scripts/test_dnds_inference.py .
cp /home/sjs3495/Omega_MutSel/scripts/*.py .


# cp hyphy, paml
cp /home/sjs3495/Omega_MutSel/SelectionInference/* .
cp /home/sjs3495/bin/bin/HYPHYMP .
cp /home/sjs3495/bin/codeml .

# Run
module load python
python test_dnds_inference.py $CPU $RDIR $FINALFILE $SGE_TASK_ID $NUMAA

# Cleanup
cp *.fasta $RDIR
cp *.tre $RDIR
cp *.bf $RDIR
cp pamloutfile $RDIR/pamloutfile$SGE_TASK_ID
rm -rf $WDIR
